<html>
<head>
<title>Kindle Highlights</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="http://code.jquery.com/jquery-1.7.2.min.js"> </script>
<script src="./bootstrap/js/bootstrap.min.js"> </script>
<script src="./bootstrap/js/bootstrap-scrollspy.js"></script>
<link href="./bootstrap/css/bootstrap.css" rel="stylesheet">

<style type="text/css">
  body { padding-top: 60px; }
</style>

</head>
<body>
  <div id="top"></div>
  <div id="navbar" class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="#">Kindle Highlights</a>
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Select Books<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% books.each do | b | %>
                <li class=""><a href="#<%= b.asin %>"><%= b.title %></a></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <% books.each do | b | %>
      <div id="<%= b.asin %>"></div>
      <br/>
      <a href="#top">Back to Top</a>
      <br/>
      <h2><%= b.title %></h2>
      <table class="table table-striped table-bordered table-condensed">
        <% highlights[b.asin].each_with_index do | h, index | %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= h.content %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</body>
</html>
